---
import logo from "../img/horizontal_logo.svg";
import "../styles/styles.css";
---

<header>
  <div class="header-container">
    <a href="/">
      <img src={logo.src} alt="CRTV ESC logo" class="logo" />
    </a>

    <button id="burger" class="burger">&#9776;</button>

    <nav id="nav-menu" class="nav-menu">
      <a href="/">Main Menu</a>
      <a href="/about">About</a>
    </nav>
  </div>
</header>

<style>
  header {
    background-color: #e6d4ff;
    padding: 1rem 2rem;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .logo {
    height: 60px;
  }

  .nav-menu {
    display: flex;
    gap: 2rem;
  }

  .nav-menu a {
    font-family: "Arial Black", sans-serif;
    text-decoration: none;
    font-size: 1.2rem;
    color: #0047ff;
    text-transform: uppercase;
  }

  .nav-menu a:hover {
    color: #2200cc;
  }

  .burger {
    display: none;
    font-size: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    color: #0047ff;
  }

  @media (max-width: 768px) {
    .burger {
      display: block;
    }

    .nav-menu {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 80px;
      right: 20px;
      background-color: #e6d4ff;
      padding: 1rem 1.5rem;
      border: 1px solid #ccc;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      z-index: 10;
    }

    .nav-menu.active {
      display: flex;
    }

    .nav-menu a {
      font-size: 1.3rem;
    }
  }
</style>

<script type="module" is:inline>
  const burger = document.getElementById("burger");
  const navMenu = document.getElementById("nav-menu");

  burger?.addEventListener("click", () => {
    navMenu?.classList.toggle("active");
  });
</script>
